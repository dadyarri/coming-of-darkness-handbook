---
import Layout from "@layouts/Layout.astro";
---

<Layout>
    <div class="character-page">
        <div id="character-content">
            
        </div>
    </div>
</Layout>

<script>
    import { supabase } from "../../lib/supabase";

    async function init() {
        const contentContainer = document.getElementById("character-content");
        if (!contentContainer) return;

        const showLoading = () => {
            contentContainer.innerHTML = `
                <div class="character-page__loading">
                    <div class="character-page__spinner"></div>
                    <p>Загрузка</p>
                </div>
            `;
        };

        const updateUI = async () => {
            const urlParams = new URLSearchParams(window.location.search);
            const id = urlParams.get('id');

            if (!id) {
                contentContainer.innerHTML = `
                    <div class="character-page__error">
                        <h2>Персонаж не найден</h2>
                        <p>Не указан ID персонажа</p>
                    </div>
                `;
                return;
            }

            try {
                // Show loading spinner
                showLoading();

                // Get current user
                const { data: { user } } = await supabase.auth.getUser();
                
                if (!user) {
                    contentContainer.innerHTML = `
                        <div class="character-page__error">
                            <h2>Доступ запрещён</h2>
                            <p>Войдите в аккаунт</p>
                        </div>
                    `;
                    return;
                }

                const { data: character, error: fetchError } = await supabase
                    .from('character_lists')
                    .select('*')
                    .eq('id', id)
                    .eq('owner', user.id)
                    .single();

                if (fetchError) throw fetchError;

                if (!character) {
                    contentContainer.innerHTML = `
                        <div class="character-page__error">
                            <h2>Персонаж не найден</h2>
                            <p>Он был удалён или не существует</p>
                        </div>
                    `;
                    return;
                }

                // Get portrait URL if exists
                let portraitUrl = null;
                if (character.portrait) {
                    const { data: portraitData } = await supabase.storage
                        .from('cod-portraits')
                        .getPublicUrl(character.portrait);
                    portraitUrl = portraitData.publicUrl;
                }

                // Create temporary container to preload image
                const tempContainer = document.createElement('div');
                tempContainer.innerHTML = `
                    <div class="character-page__content">
                        <div class="character-page__header">
                            <div class="character-page__portrait">
                                ${portraitUrl 
                                    ? `<img 
                                        src="${portraitUrl}" 
                                        alt="${character.name} portrait"
                                        class="character-page__image"
                                    />`
                                    : `<div class="character-page__placeholder">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                                            <circle cx="12" cy="7" r="4"/>
                                        </svg>
                                    </div>`
                                }
                            </div>
                            <div class="character-page__info">
                                <h1 class="character-page__name">${character.name}</h1>
                                ${character.description 
                                    ? `<p class="character-page__description">${character.description}</p>`
                                    : ''
                                }
                            </div>
                        </div>
                        
                        <div class="character-page__details">
                            <!-- Add more character details here as needed -->
                        </div>
                    </div>
                `;

                // If there's an image, wait for it to load
                if (portraitUrl) {
                    const img = tempContainer.querySelector('img');
                    if (img) {
                        await new Promise((resolve, reject) => {
                            img.onload = resolve;
                            img.onerror = reject;
                        });
                    }
                }

                // Now show the content
                contentContainer.innerHTML = tempContainer.innerHTML;
            } catch (error: any) {
                console.error('Error loading character:', error);
                contentContainer.innerHTML = `
                    <div class="character-page__error">
                        <h2>Ошибка загрузки персонажа</h2>
                        <p>${error.message}</p>
                    </div>
                `;
            }
        };

        // Load character data when page loads
        updateUI();
    }

    // Initialize the page
    init();
</script>

<style>
    .character-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .character-page__error {
        text-align: center;
        padding: 2rem;
        background: var(--color-background-alt);
        border-radius: 8px;
    }

    .character-page__content {
        background: var(--color-background-alt);
        border-radius: 8px;
        padding: 2rem;
    }

    .character-page__header {
        display: flex;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .character-page__portrait {
        width: 200px;
        height: 200px;
        border-radius: 8px;
        overflow: hidden;
        background: var(--color-background);
    }

    .character-page__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .character-page__placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-text-muted);
    }

    .character-page__info {
        flex: 1;
    }

    .character-page__name {
        font-size: 2rem;
        margin: 0 0 1rem 0;
    }

    .character-page__description {
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    .character-page__details {
        margin-top: 2rem;
    }
</style>