---
import Layout from "@layouts/Layout.astro";
import { getCollection, getEntry } from "astro:content";
import AlphabeticalList from "@components/AlphabeticalList.astro";

const beasts = await getCollection("bestiary");
const beastTypes = await getCollection("beastTypes");

// Prepare legend items
const legend = beastTypes.map(type => ({
    icon: type.data.icon,
    title: type.data.title
}));

// Prepare beast items
const items = await Promise.all(beasts.map(async (beast) => {
    const type = await getEntry(beast.data.type);
    return {
        id: beast.id,
        title: beast.data.title,
        icon: type.data.icon,
        href: `/bestiary/${beast.id}`
    };
}));
---

<Layout>
    <AlphabeticalList 
        title="Бестиарий"
        items={items}
        legend={legend}
    />
</Layout>
